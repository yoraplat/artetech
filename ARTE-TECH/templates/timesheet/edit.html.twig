{% extends 'base.html.twig' %}

{% block body %}

<h1>ARTE-TECH</h1>
    <h2>Timesheet aanpassen</h2>
<div class="nav-container">
    <div class="navigation">
        <div class="nav-element"><a href="{{ path('manager') }}">Manager</a></div>
        <div class="nav-element"><a href="{{ path('customers') }}">Klanten</a></div>
        <div class="nav-element"><a href="{{ path('app_logout') }}">Uitloggen</a></div>
    </div>
</div>
    <div class="timesheet-form-container">
<form method='POST' class="timesheet-form" action="{{ path('update_timesheet', {'id': timesheet.id}) }}">

    <label for="rate">Rate id:</label>
    <input name='rate' value="{{ timesheet['rate_id'] }}"/>
    <label for="startDate">Start date:</label>
    <input name='startDate' value="{{ timesheet['start_date']|date('y-m-d h:m:s') }}"/>
    <label for="endDate">End date:</label>
    <input name='endDate' value="{{ timesheet['end_date']|date('y-m-d h:m:s') }}"/>
    <label for="pauze">Pauze:</label>
    <input name='pauze' value="{{ timesheet.pauze }}"/>
    <label for="activities">Activities:</label>
    <input name='activities' value="{{ timesheet.activities }}"/>
    {% if timesheet.materials|default(null) %}
    <label for="materials">Materials:</label>
    <input name='materials' value="{{ timesheet.materials }}"/>
    {% endif %}
    
    {% if timesheet['hourly_rate']|default(null) %}
    <label for="hourlyRate">Hourly rate:</label>
    <input name='hourlyRate' value="{{ timesheet['hourly_rate'] }}"/>
    {% endif %}
    
    {% if timesheet['transport_cost']|default(null) %}
    <label for="transportCost">Transport cost:</label>
    <input name='transportCost' value="{{ timesheet['transport_cost'] }}"/>
    {% endif %}

    <button>Submit</button>
</form>
</div>


{% endblock %}
